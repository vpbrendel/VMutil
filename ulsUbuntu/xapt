#Installing current R and overall upgrade:
#
apt install r-base-core r-base-dev
R --version
add-apt-repository ppa:marutter/rrutter
apt update
apt full-upgrade
R --version
R CMD javareconf

#Overall update:
#
apt-get autoremove
apt-get update
